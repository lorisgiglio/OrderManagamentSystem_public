{
  "ConnectionStrings": {
    "SqliteConnection": "Data Source=Orders.db"
  },
  "ValidationEndpoints": {
    "UsersBaseUrl": "https://localhost:7004",
    "UsersCheckIdsUri": "/users/check-ids",
    "AddressesBaseUrl": "https://localhost:7000",
    "AddressesCheckIdsUri": "/addresses/check-ids",
    "ProductsBaseUrl": "https://localhost:7003",
    "ProductsCheckIdsUri": "/products/check-ids"
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.File" ],
    "MinimumLevel": "Information",
    "WriteTo": [
      { "Name": "Console" },
      {
        "Name": "File",
        "Args": {
          "path": "log.txt",
          "rollingInterval": "Day",
          "retainedFileCountLimit": 14
        }
      }
    ],
    "Enrich": [ "FromLogContext", "WithMachineName", "WithThreadId" ]
  }
}
